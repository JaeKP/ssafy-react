{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "토마토 타이머",
  "description": "토마토 타이머 - React Chrome 익스텐션 만들기",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icons": {
      "16": "icon.png",
      "24": "icon.png",
      "36": "icon.png"
    },
    "default_title": "토마토 타이머",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}